<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/rootView"
    android:paddingTop="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/titleView"
        android:textColor="@color/colorForeground"
        android:fontFamily="@font/tamil_bold"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="20sp"
        tools:text="பொன்னியின் செல்வன்"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingTop="10dp"
        android:id="@+id/descView"
        android:textColor="@color/colorForeground"
        android:fontFamily="@font/tamil_bold"
        android:textStyle="bold"
        android:textSize="16sp"
        tools:text="www.newsfirst.lk இணையத்தளத்திற்கு இன்று சிறப்பான நாள், ஊடக வரலாற்றில் பல்வேறு மாற்றங்களுடன் பயணித்த newsfirst.lk இன்று 11 ஆவது ஆண்டில் காலடி எடுத்து வைத்துள்ளது. அதுவே இந்த நாளுக்கான சிறப்பு…. 2007 ஆம் ..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingTop="10dp"
        android:id="@+id/dateView"
        android:textColor="@color/colorForeground50"
        android:fontFamily="@font/tamil_bold"
        android:textStyle="bold"
        android:textSize="16sp"
        tools:text="10 Oct, 2017 | 9:45 am"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>