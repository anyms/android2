<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorToolbar"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:id="@+id/collage1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/collage1"
            android:contentDescription="@string/collage_layout_image" />
        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/collage2"
            android:padding="20dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/collage2"
            android:contentDescription="@string/collage_layout_image" />

        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/collage3"
            android:padding="20dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/collage3"
            android:contentDescription="@string/collage_layout_image" />

    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/collage4"
            android:padding="20dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/collage4"
            android:contentDescription="@string/collage_layout_image" />

        <ImageView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/collage5"
            android:padding="20dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/collage5"
            android:contentDescription="@string/collage_layout_image" />

    </LinearLayout>

</LinearLayout>